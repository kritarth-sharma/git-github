pipeline {
   agent any

   stages {
      stage('BUILD') {
        when {
            expression { choice == '1' }
        }
        steps {
                echo 'Hello World runnig build phase...'
        }
      }
      stage ('deploy') {
        when {
             expression ( choice == '2' )
        }
        steps {
                echo 'hey,hi,hello,bye'
            sh '''#!/bin/bash
                echo "hello from bash"
                echo "who i'm $SHELL"
            '''      
        }
      }
   }
}
